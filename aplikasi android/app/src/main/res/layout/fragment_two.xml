<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.64"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_sisadaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sisa daya"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/text_sisadaya"
            android:layout_gravity="center"
            android:text="@string/isi_daya"
            android:textSize="@dimen/daya_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_satuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/daya"
            android:layout_gravity="center"
            android:text="KWh"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="100dp">

        <ToggleButton
            android:id="@+id/toggleButton_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTintMode="@color/colorAccent"
            android:checked="true"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:text="Power"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
</FrameLayout>